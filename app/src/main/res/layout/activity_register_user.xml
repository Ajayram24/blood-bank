<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="ðŸ©¸ BLOOD LINK"
            android:textColor="#E53935"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Join the lifesaving community"
            android:textColor="#555"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/etName"
                    android:hint="Enter your full name"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etDOB"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbMale"
                        android:text="Male"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbFemale"
                        android:text="Female"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbOther"
                        android:text="Other"/>
                </RadioGroup>

                <EditText
                    android:id="@+id/etPhone"
                    android:hint="+91 00000 00000"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:hint="your@email.com"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spinnerBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="Select Blood Group" />

                <EditText
                    android:id="@+id/etLastDonation"
                    android:hint="Last donation date (if applicable)"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etAddress"
                    android:hint="Enter your street address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText android:id="@+id/etCity"
                    android:hint="City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText android:id="@+id/etState"
                    android:hint="State"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText android:id="@+id/etZip"
                    android:hint="ZIP/Postal Code"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </ScrollView>


        <!-- All your EditText and Spinner fields here (same as shown earlier) -->

        <!-- Terms and Button -->
        <CheckBox
            android:id="@+id/cbTerms"
            android:text="I agree to the Terms of Service and Privacy Policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegister"
            android:text="Create Account"
            android:backgroundTint="#E53935"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
