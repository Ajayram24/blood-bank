<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F8FAFC">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="#1E293B" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your role to continue"
        android:textSize="14sp"
        android:layout_marginBottom="60dp"
        android:textColor="#64748B" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm an Admin\nAccess administrative controls and manage system"
        android:padding="24dp"
        android:background="@drawable/rounded_button_admin"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp" />

    <Button
        android:id="@+id/userButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm a User/Donor\nAccess user features and donation options"
        android:padding="24dp"
        android:background="@drawable/rounded_button_user"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="30dp"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/noteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the appropriate role for your access level"
        android:textSize="12sp"
        android:textColor="#94A3B8" />
</LinearLayout>
