<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_redback"
                android:contentDescription="@string/back" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Request Blood "
            android:textColor="@color/black"
            android:textSize="25dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the details to request blood"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="Select hospital "
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_hospital"
                android:contentDescription="Hospital Icon" />

            <Spinner
                android:id="@+id/spinner_hospital"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:spinnerMode="dropdown"
                android:background="@android:color/transparent" />
            <ImageView
                android:layout_width="24dp"
                android:gravity="end"
                android:layout_height="24dp"
                android:src="@drawable/ic_downarrow" />
        </LinearLayout>

        <TextView
            android:text="Patient Details"
            android:textSize="18sp"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:layout_width="200dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_patient_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Patient Name"
            android:textSize="15dp"
            android:padding="12dp"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/vector3"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_contact_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Contact Number"
            android:textSize="15dp"
            android:padding="12dp"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/vector_5"
            android:drawablePadding="8dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone"/>

        <TextView
            android:text="Blood Requirements"
            android:layout_width="250dp"
            android:scrollbarSize="18dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:padding="8dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_A_plus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="A+"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_A_minus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="A-"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_B_plus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="B+"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_B_minus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="B-"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_O_plus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="O+"
                android:layout_marginEnd="10dp"

                android:textColor="#000000"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_O_minus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="O-"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_AB_plus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="AB+"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_A"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="A"
                android:textColor="#000000"
                android:layout_marginEnd="10dp"
                android:background="#F0F0F0"
                android:textSize="16sp"
                android:gravity="center"/>
        </GridLayout>



        <TextView
            android:text="Units Required"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#F0F0F0"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#D32F2F"
                android:background="@drawable/bg_circle_button"/>

            <TextView
                android:id="@+id/tv_units"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="20sp"
                android:textColor="#D32F2F"
                android:background="@drawable/bg_circle_button"/>
        </LinearLayout>

        <TextView
            android:text="Urgency Level"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rg_urgency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_edittext"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb_emergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ Emergency"
                android:textColor="#D32F2F"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/rb_urgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ Urgent"
                android:textColor="#FFA000"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/rb_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ℹ️ Regular"
                android:textColor="#1976D2"
                android:textSize="16sp"/>
        </RadioGroup>

        <EditText
            android:id="@+id/et_additional_notes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Add any additional information..."
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_submit_request"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit Request"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
