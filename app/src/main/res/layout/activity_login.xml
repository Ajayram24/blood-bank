<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_blood_drop"
            android:layout_marginTop="48dp" />

        <TextView
            android:text="Blood Link"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Connecting Lives Through Blood Donation"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tab: Login/Sign Up -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_tab_selector"
            android:padding="2dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnLoginTab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Login"
                android:background="@drawable/bg_selected_tab"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnSignupTab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:background="@android:color/transparent"
                android:textColor="#888888" />
        </LinearLayout>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email or Phone Number"
            android:background="@drawable/bg_edittext"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/bg_edittext"
            android:padding="14dp"
            android:inputType="textPassword"
            android:layout_marginBottom="4dp" />

        <TextView
            android:text="Forgot Password?"
            android:textColor="#FF3B30"
            android:textSize="12sp"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="or continue with"
            android:textColor="#999999"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Google and Apple login buttons -->
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue with Google"
            android:drawableStart="@drawable/ic_google"
            android:background="@drawable/bg_edittext"
            android:layout_marginBottom="12dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnApple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue with Apple"
            android:drawableStart="@drawable/ic_apple"
            android:background="@drawable/bg_edittext"
            android:padding="14dp" />

        <TextView
            android:text="Donâ€™t have an account? "
            android:textColor="#999999"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Sign up"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
