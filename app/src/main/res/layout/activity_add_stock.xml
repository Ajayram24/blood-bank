<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add New Blood Stock"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 13, 2025"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Blood Group" />

        <EditText
            android:id="@+id/bloodGroupEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="A+"
            android:enabled="false"
            android:paddingBottom="20dp"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Stock" />

        <TextView
            android:id="@+id/currentStockTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="124\nUnits available"
            android:textSize="24sp"
            android:padding="20dp"
            android:gravity="start"
            android:textStyle="bold"
            android:background="@drawable/text_bg"
            android:layout_marginBottom="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Units to Add" />

        <EditText
            android:id="@+id/unitsToAddEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/clip_path_group__3_"
            android:inputType="number"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:text="1"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes (Optional)" />

        <EditText
            android:id="@+id/notesEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Add any additional notes about this stock"
            android:gravity="top"
            android:background="#f4f4f4"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />


        <Button
            android:id="@+id/addStockButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Add Blood Stock"
            android:backgroundTint="#E53935"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/lastUpdatedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last updated: Today at 2:30 PM"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
